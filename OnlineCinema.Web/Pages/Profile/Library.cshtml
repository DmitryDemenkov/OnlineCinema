@page
@model OnlineCinema.Web.Pages.Profile.LibraryModel
@{
    ViewData["Title"] = "Library";
    Layout = "_ProfileHeader";
}

<div>
    <h1>Библиотека</h1>
</div>

@if (Model.Films.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Фильм</th>
                <th>Тип приобретения</th>
                <th>Оставшееся время</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model.Films)
            {
                <tr>
                    <td><a asp-page="./Film" asp-route-id="@film.Film.Id">@film.Film.Title (@film.Film.ReleaseDate.Year)</a></td>
                    <td><p1>@film.Type</p1></td>
                    @if (film.Type == "Аренда")
                    {
                        <td><p1>@film.TimeLeft.ToString() ч.</p1></td>
                    }
                    else
                    {
                        <td><p1>Навсегда</p1></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p1>Библиотека пуста</p1>
}

