@page
@model OnlineCinema.Web.Pages.SignupModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_Layout";
}

<div class="display-4">
    <h1>Регистрация</h1>
</div>

<form method="post">
    <div class="login-field">
        <p1>
            Логин
            <input asp-for="Login">
        </p1>
        <p1>
            Пароль
            <input asp-for="Password">
        </p1>
        <p1>
            Электронная почта
            <input type="email" asp-for="Email">
        </p1>
        <p1>
            Дата рождения
            <input type="date" asp-for="BirthDate">
        </p1>
        <p1>
            <input type="submit" value="Зарегистрировать" />
        </p1>
        <p1>@Model.Message</p1>
    </div>
</form>