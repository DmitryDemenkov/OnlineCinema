@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" style="padding-bottom: 20px">
    <h1 class="display-4">Популярные фильмы</h1>
</div>

@if (Model.Films != null)
{
    <div class="card-columns">
        @foreach (var film in Model.Films)
        {
            <div class="card">
                <div class="card-header">
                    <a asp-page="./Film" asp-route-id="@film.Id">@film.Title (@film.ReleaseDate.Year)</a>
                </div>
                <div class="card-body">
                    <p1>@film.Category</p1>
                </div>
            </div>
        }
    </div>
}
