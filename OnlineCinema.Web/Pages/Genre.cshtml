@page
@model OnlineCinema.Web.Pages.GenreModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Genre";
}

<div class="display-1" style="margin-bottom: 2rem">
    <h1>Жанр: @Model.GenreName</h1>
</div>

@if (Model.Films.Count() > 0)
{
    <div class="card-columns">
        @foreach (var film in Model.Films)
        {
            <div class="card">
                <div class="card-header">
                    <a asp-page="/Film" asp-route-id="@film.Id">@film.Title (@film.ReleaseDate.Year)</a>
                </div>
                <div class="card-body">
                    <p1>@film.Category</p1>
                </div>
            </div>
        }
    </div>
}
else
{
    <p1>Фильмов такого жанра нет</p1>
}